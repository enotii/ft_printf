
NAME = libftprintf.a
SRCS = ft_print_float.c ft_bzero.c ft_parse_nbr.c ft_parse_size.c ft_parse_string.c ft_print_char_string.c ft_print_other.c ft_printf.c ft_printnbr.c ft_printnbr_logic.c ft_strlen.c help_functions.c

OBJS = $(SRCS:.c=.o)

all: $(NAME) 

$(NAME):
	@gcc -c -Wall -Werror -Wextra libft/*.c -I libft/libft.h
	@gcc -c $(SRCS)
	@ar rc $(NAME) *.o
 
clean:
	@rm -rf *.o libft/*.o libft/libft.a

fclean: clean
	@rm -rf $(NAME)

re: fclean all

test:
	gcc -ggdb $(SRCS) -I libft/ -L libft/ -lft